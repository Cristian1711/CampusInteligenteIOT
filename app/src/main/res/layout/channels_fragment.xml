<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.drawer.chats.ChannelsFragment">

   <TextView
       android:id="@+id/chatsTitle"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:textColor="@color/black"
       android:textAlignment="center"
       android:paddingTop="30dp"
       android:textSize="30sp"
       android:text="Mis chats"
       android:fontFamily="@font/montserrat_bold"/>

    <io.getstream.chat.android.ui.channel.list.ChannelListView
        android:id="@+id/channelListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatsTitle"
        android:background="@color/colorBackground"
        app:streamUiChannelTitleTextColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>